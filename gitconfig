[push]
  default = current
[alias]
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  slog = log --decorate --stat --graph --pretty=format:'%C(yellow)%h%Creset (%ar - %Cred%an%Creset), %s%n'
  vim = !vim .git/index
  s = status --short
  d = diff
  dc = diff --cached
  dw = diff --word-diff
  cm = commit -m
  co = checkout
  a = add
  br = branch
  po = push origin
  search = log --all --full-history --topo-order -S
  assume   = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
  assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
  dd = "! git status --short | awk '$1 == \"D\" { print $2}' | xargs git rm --cached"
  blast = for-each-ref --sort=-committerdate refs/heads/ --format="%(committerdate:relative)%09%(refname:short)"
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[core]
  excludesfile = ~/.cvsignore
  autocrlf = input
  pager = less -r
[merge]
  tool = threesome
	ff = no
[mergetool "threesome"]
  cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
  trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
